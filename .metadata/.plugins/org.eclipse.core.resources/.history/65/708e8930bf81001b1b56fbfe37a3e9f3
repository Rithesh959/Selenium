		driver.findElement(By.cssSelector("#divpaxinfo")).click();
		Thread.sleep(2000L);
		
	   int i=1;
	
		while(i<=4)
		{
		driver.findElement(By.cssSelector("#hrefIncAdt")).click(); //2,3,4,5
		i++;
		}
		System.out.println(driver.findElement(By.cssSelector("div[id='divpaxinfo']")).getText());
		
		Assert.assertEquals(driver.findElement(By.cssSelector("div[id='divpaxinfo']")).getText(),"51 Adult" );
		
		
		
		driver.findElement(By.cssSelector("#hrefIncChd")).click();
