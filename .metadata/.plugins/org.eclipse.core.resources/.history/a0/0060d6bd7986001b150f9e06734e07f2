package section5;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class CalenderHandle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		System.setProperty("webdriver.chrome.driver","C:\\RGUD\\chromedriver.exe" );
		WebDriver driver = new ChromeDriver();

		driver.get("https://www.path2usa.com/travel-companions");
		
		driver.findElement(By.id("travel_date")).click();
		
//		String[] presentMonth=driver.findElement(By.className("datepicker-switch")).getText().split(" ");
//		
//		String Month =presentMonth[0];
//		String Year=presentMonth[1];
//		List<WebElement> days = driver.findElements(By.className("day"));
		
		
		
		
		for(int i=0;i<=100;i++)
		{
			
			String[] presentMonth=driver.findElement(By.className("datepicker-switch")).getText().split(" ");
			
			String Month =presentMonth[0];
			String Year=presentMonth[1];
			List<WebElement> days = driver.findElements(By.className("day"));
		if(Month.equalsIgnoreCase("April")&& Year.equalsIgnoreCase("2022"))
		{
			for(WebElement day : days)
			{
				String date =day.getText();
				if(date.equalsIgnoreCase("20"))
				{
					day.click();
					return;
				}
				
				
			}
		}
		
		driver.findElement(By.xpath("//table[@class=' table-condensed']/thead/tr[1]/th[3]")).click();
		
		
		}
		
		
		
		
		
		
		
		
	}
	
	public static void Calender(WebDriver driver,String Month, String Year, String day )
	{
		for(int i=0;i<=100;i++)
		{
			
			String[] presentMonth=driver.findElement(By.className("datepicker-switch")).getText().split(" ");
			
			String GetMonth =presentMonth[0];
			String GetYear=presentMonth[1];
			List<WebElement> days = driver.findElements(By.className("day"));
		if(GetMonth.equalsIgnoreCase(Month)&& GetYear.equalsIgnoreCase(Year))
		{
			for(WebElement Getday : days)
			{
				String date =Getday.getText();
				if(date.equalsIgnoreCase(day))
				{
					Getday.click();
					return;
				}
				
				
			}
		}
		
		driver.findElement(By.xpath("//table[@class=' table-condensed']/thead/tr[1]/th[3]")).click();
		
		
		}
	}

}
