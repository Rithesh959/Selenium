package Introduction;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class LoginSalesforceByXpath {

	public static void main(String[] args) {
		
		//using Xpath css selector locator
		// TODO Auto-generated method stub
	 System.setProperty("webdriver.chrome.driver","C:\\RGUD\\chromedriver.exe" );
	 WebDriver driver = new ChromeDriver();
	 driver.get("https://login.salesforce.com");
	 driver.findElement(By.xpath("//*[@id=\'password\']")).sendKeys("Password");
     //driver.findElement(By.xpath("//*[@id=\'Login\']")).click();
     
     driver.findElement(By.cssSelector("[id='password']")).sendKeys("Passwordasfdsfjlsdk");
     driver.findElement(By.cssSelector("#username")).sendKeys("Abc");
     driver.findElement(By.cssSelector("input#Login")).click();
     String error= driver.findElement(By.cssSelector("#error")).getText();
     System.out.println("entering error message");
     System.out.println(error);
	}

}
